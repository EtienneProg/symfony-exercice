<!DOCTYPE html>
<html lang='fr'>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Locky
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg bg-dark-subtle shadow" style="z-index:9999">
			<div class="container-fluid">
				<a class="navbar-brand" href="#">Locky</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="{{ path('app_prestation') }}">Accueil</a>
						</li>
						{% if app.user %}
							<li class="nav-item">
								<a class="nav-link" aria-current="page" href="{{ path('app_addPresta') }}">Ajouter une prestation</a>
							</li>
						{% endif %}
					</ul>
					<ul class="navbar-nav mb-2 mb-lg-0">

						{% if app.user %}
							<li class="nav-item">
								<a class="nav-link" aria-current="page" href="{{ path('app_profilPrestaList') }}">Mes Préstations</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" aria-current="page" href="{{ path('app_logout') }}">Déconnexion</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" aria-current="page" href="{{ path('app_login') }}">Connexion</a>
							</li>
						{% endif %}


					</ul>
				</div>
			</div>
		</nav>
		{% for label, messages in app.flashes %}
			{% for message in messages %}
				<div class="alert alert-{{ label }} w-25 m-auto" style="z-index:999">
					{{ message }}
				</div>
			{% endfor %}
		{% endfor %}
		{% block body %}{% endblock %}
	</body>
</html>
