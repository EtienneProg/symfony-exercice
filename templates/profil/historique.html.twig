{% extends 'profil/base.html.twig' %}

{% block content %}
	<br class"mt-5">
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container-fluid mt-4">
		<div class="row">
			<div class="p-5">
				<p class="fs-3 fw-semibold">
					Mes Prestations :
				</p>
				<table class="table mt-5">
					<thead>
						<tr>
							<th scope="col">Date de la demande</th>
							<th scope="col">Nom</th>
							<th scope="col">Rémunération</th>
							<th scope="col">Action</th>
						</tr>
					</thead>
					<tbody class="table-group-divider .table-hover">
						{% for prestation in prestations %}
							<tr>
								<th scope="row">{{prestation.dateCommande.format('d/m/Y')}}</th>
								<td>{{prestation.nom}}</td>
								<td>{{prestation.remuneration}}
									€</td>
								<th>
									<a href="{{ path('app_editPresta', {'id':prestation.id}) }}" class="btn btn-primary">Modifier</a>
									<a href="{{ path('app_deletePresta', {'id':prestation.id}) }}" class="btn btn-danger">supprimer</a>
								</th>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
